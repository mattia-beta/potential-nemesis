<%= form_for @user, :html => { :multipart => true } do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Crea", :class => "btn btn-primary" %>

<% end %>
