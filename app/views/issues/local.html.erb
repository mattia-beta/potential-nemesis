<%= javascript_include_tag "global_show" %>
<%= render :partial => "layouts/menu" %>

<div id="issues-index" class="container">
  <div class="row blocco"></div>

  <div class="row">
    <div class="span4">

      <h1>Nearest issues</h1>

      <hr class="row">

      <div class="accordion" id="accordion2">
      <% @issues.each do |i| %>


        

    <div class="accordion-group">
      <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapse<%= i.id %>">
          <h3><%= i.name.capitalize %></h3>
        </a>
    </div>


    <div id="collapse<%= i.id %>" class="accordion-body collapse">
      <div class="accordion-inner">
        
          
            <div id="desc2"><%= i.description %></div>
            <br>

            <%= image_tag i.image_url.to_s, :size => "150x50", :style => "float:left; padding-right: 15px;padding-bottom: 15px;" %>

            <p>Submitter: <%= i.user.name.capitalize %></p>
            <p>Genre: <%= i.genre %></p>

            <button class="btn btn-info btn-mini show-on-map" latitude="<%= i.latitude %>" longitude="<%= i.longitude %>">
              <i class="icon-search icon-white"></i>
              &nbsp;
              Show on Map
            </button>
 
            <%= form_for :comment, url: {controller: :issues, action: :comment} do |f| %>
              <%= f.text_area :body, :size => "60x5", :placeholder => 'Insert a comment' %>
              <%= f.hidden_field :issue_id, :value => i.id %><br />
              <%= f.submit "Done", :class => "btn btn-primary", :id => "issue-done" %>
            <% end %>
      </div>
    </div>
  </div>

            

      <% end %>
    </div>

